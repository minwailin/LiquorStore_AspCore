@model Drink
    <div class="row">
        <div class="col-md-4 col-sm-6">
            <div class="thumbnail">
                <img src="@Url.Content(Model.ImageThumbnailUrl)" alt="pic" />
                <div class="caption">
                    <h3>@Model.Price.ToString("c")</h3>
                    <h3>@Model.Name</h3>
                    <p>@Model.ShortDescription</p>
                </div>
            </div>

        </div>
    </div>